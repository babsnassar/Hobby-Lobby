<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
    <h1><strong>Congratulations! You're booking for <%= @politician.full_name %> is confirmed! </strong></h1>
    <h3>Start date:</h3>
    <p><%= @booking.start_date.strftime("%m.%d.%Y") %></p>
    <h3>End date:</h3>
    <p><%= @booking.end_date.strftime("%m.%d.%Y") %></p>
    <h3>Details about the deal</h3>
    <p><%= @booking.topic %></p>
<br>

    </div>
  </div>
</div>
<div class="text-center col-12 mt-4">
  <h2>All of your bookings</h2>
</div>
 <div class="section mt-4 ">
  <div class="row">
    <% current_user.bookings.each do |booking| %>
      <div class="col-12 col-md-4 mb-3">
          <div class="card-trip">
            <%= image_tag booking.politician.photo_url %>
            <div class="card-trip-infos">
              <div>
                <h3><%= booking.politician.full_name %></h3>
                      <% days = booking.end_date - booking.start_date %>
                <p>In total<strong> <%= duration = (days / 24 / 60 / 60).to_i %> </strong>days from <em><%= booking.start_date.strftime("%m.%d.%Y") %> </em>until <em><%= booking.end_date.strftime("%m.%d.%Y") %></em></p>
              </div>
              <div class="card-trip-pricing">
                <p>Total cost: <strong><%= booking.politician.price * duration %>,- â‚¬ </strong></p>
              </div>
            </div>
          </div>

      </div>
    <% end %>
  </div>
</div>

<div class="text-center col-12 mt-4">
  <%= link_to "Look for more politicians", politicians_path, class: "btn-gray-square" %>
</div>
<div class="text-center col-12 mt-4">
  <%= link_to "Go back to main page", root_path, class: "btn-gray-square" %>
</div>
