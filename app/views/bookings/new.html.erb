<div class="container col-4">
  <div class="section mt-3">
    <h1>New Booking for <%= @politician.full_name %></h1>
    <%= simple_form_for [@politician, @booking] do |t| %>
    <%= t.input :start_date, as: :date, html5: true, input_html: {class: "datepicker"} %>
    <%= t.input :end_date, as: :date, html5: true, input_html: {class: "datepicker"} %>
    <%= t.input :topic %>
    <div class="mt-5 d-flex justify-content-between ">
      <%= t.submit class: "btn-gray-square" %>
      <%= link_to "Go back", politician_path(@politician), class: "btn-gray-square" %>
    </div>
    <% end %>

    </div>
  </div>
</div>
